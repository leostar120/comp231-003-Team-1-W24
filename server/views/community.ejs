<script>
    // Function to handle form submission
    function submitPost(event) {
        event.preventDefault(); // Prevent the form from submitting normally

        // Get the input value
        var inputText = document.getElementById("tweetInput").value;

        // Create a new post element
        var newPost = document.createElement("div");
        newPost.className = "post";

        // Construct the HTML for the new post
        newPost.innerHTML = `
            <div class="post__avatar">
                <img src="https://i.pinimg.com/originals/a6/58/32/a65832155622ac173337874f02b218fb.png" alt="" width="40px" height="60px">
            </div>
            <div class="post__body">
                <div class="post__header">
                    <div class="post__headerText">
                        <h3 class="post_head">
                            Your Name
                            <span class="post__headerSpecial"><span class="material-icons post__badge"> verified </span>@yourusername</span>
                        </h3>
                    </div>
                    <div class="post__headerDescription">
                        <p>${inputText}</p>
                    </div>
                </div>
            </div>
        `;

        // Append the new post to the feed
        var feed = document.querySelector(".feed");
        feed.appendChild(newPost);

        // Clear the input field
        document.getElementById("tweetInput").value = "";
    }
</script>
